<h1>Active Events</h1>
<% unless @current_events.empty? %>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Name</th>
				<th>Start Date</th>
				<th>End Date</th>
				<th>Posts</th>
			</tr>
		</thead>
		<tbody>
			<% @current_events.each do |event| %>
				<tr class="event-row" data-href="<%= event_path(event) %>">
					<td><%= event.name %></td>
					<td><%= event.start_date %></td>
					<td><%= event.end_date %></td>
					<td>TODO</td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	<p class="text-center">None</p>
<% end %>

<hr />

